<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogLoading" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="DatePicker" parent="ThemeOverlay.AppCompat.Dialog">
        <!--header background-->
        <item name="colorAccent">@color/colorPrimary</item>
        <!--header textColor-->
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <!--body background-->
        <item name="android:windowBackground">@color/white</item>
        <!--selected day-->
        <item name="android:colorControlActivated">@color/orange</item>
        <!--days of the month-->
        <item name="android:textColorPrimary">@color/black</item>
        <!--days of the week-->
        <item name="android:textColorSecondary">@color/black</item>
        <!--cancel&ok-->
        <item name="colorPrimary">@color/black</item>


        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorTertiary">@color/black</item>
        <item name="android:textColorTertiaryInverse">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/black</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/black</item>


    </style>
</resources>