<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.text.InputType" />

        <variable
            name="presenter"
            type="com.utc.asm_mob_java.screen.loginscreen.LoginPresenter" />
    </data>

    <RelativeLayout
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_80"
            android:text="@string/welcome_to_bear_shop"
            android:textAlignment="center"
            android:textColor="@color/acorn"
            android:textSize="@dimen/dp_30"
            android:textStyle="bold"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:id="@+id/ln_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_welcome"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10"
                android:importantForAccessibility="no"
                android:src="@mipmap/ic_launcher" />

            <EditText
                android:id="@+id/tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edt"
                android:hint="@string/user_name"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_10"
                android:text="@={presenter.username}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <EditText
                android:id="@+id/tv_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@drawable/bg_edt"
                android:drawableEnd="@{!presenter.isShowPass ? @drawable/ic_hide_pass : @drawable/ic_show_pass}"
                android:hint="@string/password"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingHorizontal="@dimen/dp_5"
                android:paddingVertical="@dimen/dp_10"
                android:text="@={presenter.password}"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:ignore="UselessLeaf">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_weight="1"
                    android:text="@string/create_new_acc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="SpUsage" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:layout_weight="1"
                    android:text="@string/for_got_pass"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    tools:ignore="SpUsage" />

            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_50"
            android:backgroundTint="#ECE7DB"
            android:onClick="@{v -> presenter.onLogin()}"
            android:text="@string/login"
            android:textColor="@color/acorn"
            android:textSize="@dimen/dp_20"
            app:cornerRadius="@dimen/_16sdp"
            app:strokeColor="@color/black"
            app:strokeWidth="@dimen/dp_1"
            tools:ignore="SpUsage" />
    </RelativeLayout>
</layout>
