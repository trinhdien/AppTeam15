<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.utc.asm_mob_java.data.model.Product" />

        <variable
            name="viewHolder"
            type="com.utc.asm_mob_java.base.BaseRecyclerView.BaseViewHolder" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_5"
        android:background="@color/white"
        android:gravity="center"
        android:onClick="@{v -> viewHolder.onClickItem()}"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        tools:ignore="UselessLeaf">

        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/poster_8" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Điện thoại top 1 việt nam"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="Giá: 29.000.000 VNĐ"
            android:textColor="#B11A27"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="Đã bán: 19,8k"
            android:textColor="@color/black" />

    </LinearLayout>
</layout>