<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.utc.asm_mob_java.data.model.Cart" />

        <variable
            name="viewHolder"
            type="com.utc.asm_mob_java.base.BaseRecyclerView.BaseViewHolder" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{v-> viewHolder.onClickItem4()}"
        app:cardCornerRadius="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">

                <LinearLayout
                    android:id="@+id/cb"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:layout_alignParentStart="true"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:importantForAccessibility="no"
                        android:onClick="@{v -> viewHolder.onClickButton()}"
                        android:src="@drawable/ic_cb_not_choose"
                        android:visibility="@{item.choose ? View.GONE : View.VISIBLE}" />

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:importantForAccessibility="no"
                        android:onClick="@{v -> viewHolder.onClickButton()}"
                        android:src="@drawable/ic_cb_choose"
                        android:visibility="@{!item.choose ? View.GONE : View.VISIBLE}"
                        tools:visibility="gone" />
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/img_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cb"
                    android:layout_marginTop="@dimen/dp_5"
                    app:cardCornerRadius="@dimen/dp_10">

                    <ImageView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="-1dp"
                        android:importantForAccessibility="no"
                        android:scaleType="centerCrop"
                        app:imageSrc="@{item.product.img}" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@+id/img_view"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{item.product.description}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@{item.product.priceTemp + ` VNĐ`}"
                        android:textColor="@color/price"
                        android:textSize="@dimen/_16sdp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:text="@{`Kho: ` + item.product.number}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_5"
                        android:background="@drawable/bg_ln_add_number"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:importantForAccessibility="no"
                                android:onClick="@{v -> viewHolder.onClickItem1()}"
                                android:padding="@dimen/dp_5"
                                android:src="@drawable/ic_remove_2" />
                        </LinearLayout>

                        <EditText
                            android:id="@+id/edt_number"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_edt_white_no_boder"
                            android:ellipsize="end"
                            android:importantForAutofill="no"
                            android:inputType="number"
                            android:maxLines="1"
                            android:text="@={item.product.numberBuyTemp}"
                            android:textAlignment="center"
                            tools:ignore="LabelFor" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:importantForAccessibility="no"
                                android:onClick="@{v -> viewHolder.onClickItem2()}"
                                android:padding="@dimen/dp_5"
                                android:src="@drawable/ic_add_2" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>