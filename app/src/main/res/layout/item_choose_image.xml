<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="item"
            type="com.utc.asm_mob_java.data.model.SelectImageModel" />

        <variable
            name="viewHolder"
            type="com.utc.asm_mob_java.base.slectimage.AdapterSelectImage.ViewHolder" />

        <import type="com.utc.asm_mob_java.utils.StringUtils" />

        <import type="com.utc.asm_mob_java.utils.DateUtils" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_1"
        android:onClick="@{() -> viewHolder.onClickItem()}">
        <ImageView
            android:id="@+id/ic_image"
            android:layout_gravity="center"
            tools:src="@drawable/ic_upload_image"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/dp_120"
            android:layout_height="@dimen/dp_120"
            tools:ignore="ContentDescription" />
    </androidx.cardview.widget.CardView>
</layout>