<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.utc.asm_mob_java.data.model.NewsModel" />

        <variable
            name="viewHolder"
            type="com.utc.asm_mob_java.base.BaseRecyclerView.BaseViewHolder" />

        <import type="com.utc.asm_mob_java.utils.StringUtils" />

        <import type="com.utc.asm_mob_java.utils.DateUtils" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_1"
        android:onClick="@{() -> viewHolder.onClickItem()}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Hình ảnh phòng -->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_180"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_home_24"
                tools:ignore="ContentDescription" />

            <!-- Nội dung chính -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@{item.title}"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold"
                    tools:ignore="SpUsage"
                    tools:text="Phòng mới xây" />

                <TextView
                    android:id="@+id/priceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical"
                    android:text="@{StringUtils.formatIntToPrice(item.price) + `/tháng`}"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    tools:ignore="SpUsage,UseCompatTextViewDrawableXml"
                    tools:text="3,200,000 VNĐ" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_25"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <ImageView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:src="@drawable/ic_home"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/addressTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:drawablePadding="@dimen/dp_10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@{item.address}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        tools:ignore="SpUsage,UseCompatTextViewDrawableXml"
                        tools:text="Bắc Ninh" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>